<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<!--
		Props file containing our EC2 values.
	-->
	<bean id="ec2Props" 
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>file:${user.home}/.ec2/ec2.properties</value>
			</list>
		</property>
	</bean>

    <!-- 
        The class for accessing running EC2 instances.
    -->
    <bean id="amazonEc2CandidateProvider"
        class="org.lastbamboo.common.amazon.ec2.AmazonEc2CandidateProvider">
		<constructor-arg value="${accessKeyId}"/>
		<constructor-arg value="${accessKey}"/>
        </bean>
  
    </beans>
